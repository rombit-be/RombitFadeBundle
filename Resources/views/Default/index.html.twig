{% block fadebundle_js %}
<script type="text/javascript">
    function ready(fn) {
        if (document.readyState != 'loading'){
            fn();
        } else {
            document.addEventListener('DOMContentLoaded', fn);
        }
    }

    ready(function () {
        document.body.style.opacity = {{ opacity }};
    });
</script>
{% endblock %}
